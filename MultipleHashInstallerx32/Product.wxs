    <!-- Display a Warning dialog box IF SSIS isn't detected-->
    <UI>
      <InstallUISequence>
        <Show Dialog="SSISWarning" Before="ResumeDlg">NOT Installed AND NOT (SSIS32_2016 OR SSIS32_2014 OR SSIS32_2012 OR SSIS32_2008)</Show>
      </InstallUISequence>
      <Dialog Id="SSISWarning" Width="200" Height="100">
