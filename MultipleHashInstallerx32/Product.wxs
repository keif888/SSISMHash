          </Component>
        </Directory>
        <Directory Id="SQL2008x32Upgrade" Name="UpgradeMappings">
          <Component Id="SQL2008x32UpgradeMapping" Guid="A8CC404C-E890-4DE2-908E-CD66E7D1CB7C" Win64="no">
